<?xml version="1.0" encoding="utf-8"?>
<!--<android.support.constraint.ConstraintLayout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="500dp"/>


    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="曹操"
        android:textColor="#dffffff0"
        android:textSize="100sp"
        android:ems="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="195dp" />

    <TextView
        android:id="@+id/info_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是一句话"
        android:textColor="#dffffff0"
        android:textSize="40sp"
        android:ems="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/info_brief"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:text="陆逊，本名陆议，字伯言，吴郡吴县（今江苏苏州）人。三国时期吴国政治家、军事家。"
        android:textColor="#dffffff0"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="220dp" />

    <TextView
        android:id="@+id/info_sex"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="性别: 男"
        android:textColor="#dffffff0"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/info_birth_death"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="生卒年月：183~245"
        android:textColor="#dffffff0"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/info_belonging"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#dffffff0"
        android:text="所属势力: 吴"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp" />

    <ImageView
        android:id="@+id/info_head_sculpture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/info_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/detail"
        />




</RelativeLayout>
<!--</android.support.constraint.ConstraintLayout>-->
